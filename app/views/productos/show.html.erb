<% if notice %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
    <%= notice %>
  </div>
<% end %>

<div class="mb-8">
  <div class="flex items-center space-x-4">
    <%= link_to productos_path, class: "text-blue-600 hover:text-blue-800" do %>
      <svg class="w-5 h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    <h1 class="text-3xl font-bold text-gray-900">📦 Detalles del Producto</h1>
  </div>
</div>

<div class="bg-white shadow-lg rounded-lg overflow-hidden max-w-4xl mx-auto">
  <div class="px-8 py-6">
    <div class="flex justify-between items-start mb-6">
      <div>
        <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= @producto.nombre %></h2>
        <span class="<%= @producto.stock > 0 ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %> text-sm font-medium px-3 py-1 rounded-full">
          <%= @producto.stock > 0 ? '✅ En Stock' : '❌ Agotado' %>
        </span>
      </div>
      <div class="text-right">
        <p class="text-3xl font-bold text-blue-600">$<%= number_with_precision(@producto.precio, precision: 2) %></p>
        <p class="text-gray-500 text-sm">Precio unitario</p>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="md:col-span-2">
        <h3 class="text-lg font-semibold text-gray-900 mb-3">📝 Descripción</h3>
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-gray-700 leading-relaxed"><%= simple_format(@producto.descripcion) %></p>
        </div>
      </div>
      
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-3">📊 Información</h3>
        <div class="bg-gray-50 rounded-lg p-4 space-y-3">
          <div class="flex justify-between">
            <span class="text-gray-600">Stock disponible:</span>
            <span class="font-semibold text-gray-900"><%= @producto.stock %> unidades</span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Valor total:</span>
            <span class="font-semibold text-gray-900">$<%= number_with_precision(@producto.precio * @producto.stock, precision: 2) %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Estado:</span>
            <span class="font-semibold <%= @producto.stock > 0 ? 'text-green-600' : 'text-red-600' %>">
              <%= @producto.stock > 0 ? 'Disponible' : 'Sin stock' %>
            </span>
          </div>
        </div>
      </div>
    </div>

    <div class="border-t pt-6">
      <div class="flex flex-wrap gap-3 justify-between items-center">
        <div class="flex gap-3">
          <%= link_to edit_producto_path(@producto), class: "bg-yellow-500 hover:bg-yellow-600 text-white font-medium py-2 px-4 rounded-lg transition duration-200" do %>
            ✏️ Editar Producto
          <% end %>
          <%= link_to productos_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded-lg transition duration-200" do %>
            📋 Volver al Catálogo
          <% end %>
        </div>
        
        <%= button_to @producto, method: :delete, 
            class: "bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 rounded-lg transition duration-200",
            confirm: "¿Estás seguro de que deseas eliminar este producto? Esta acción no se puede deshacer.",
            form: { class: "inline" } do %>
          🗑️ Eliminar Producto
        <% end %>
      </div>
    </div>
  </div>
</div>
